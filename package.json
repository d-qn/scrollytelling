		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/svelte-scroller": "^2.0.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^22",
		"@types/pym.js": "^1.3.2",
		"autoprefixer": "^10.4.23",
		"d3": "^7.9.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"layercake": "^10.0.2",
		"postcss": "^8.5.6",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^3.4.19",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"pym.js": "^1.3.2"
	}
}